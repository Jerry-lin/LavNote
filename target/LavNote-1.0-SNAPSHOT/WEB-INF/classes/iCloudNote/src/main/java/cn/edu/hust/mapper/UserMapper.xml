<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.hust.mapper.UserMapper" >
  <resultMap id="BaseResultMap" type="cn.edu.hust.domain.User" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="email" property="email" jdbcType="CHAR" />
    <result column="passwd" property="passwd" jdbcType="CHAR" />
    <result column="imgPath" property="imgpath" jdbcType="VARCHAR" />
    <result column="createDate" property="createDate" jdbcType="CHAR" />
    <result column="status" property="status" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, email, passwd, imgPath, createDate, status
  </sql>
  <insert id="insertUser" parameterType="cn.edu.hust.domain.User" >
    insert into USER (email, passwd,imgPath, createDate)
    values (#{email,jdbcType=CHAR}, #{passwd,jdbcType=CHAR},#{imgpath,jdbcType=VARCHAR}, #{createDate,jdbcType=CHAR})
  </insert>

  <select id="findUserByEmail" parameterType="java.lang.String" resultMap="BaseResultMap">
      select * from USER where email=#{email,jdbcType=CHAR}
  </select>

  <update id="updateUserByEmail" parameterType="java.lang.String">
      UPDATE USER SET status=1 WHERE email=#{email,jdbcType=CHAR}
  </update>

  <update id="updatePasswdByEmail" parameterType="cn.edu.hust.domain.User">
    UPDATE USER SET passwd=#{passwd,jdbcType=CHAR} WHERE email=#{email,jdbcType=CHAR}
  </update>

  <select id="findUserByEmailAndPasswd" parameterType="cn.edu.hust.domain.User" resultMap="BaseResultMap">
    SELECT * FROM USER WHERE email=#{email,jdbcType=CHAR} and passwd=#{passwd,jdbcType=CHAR}
  </select>

  <delete id="deleteByEmail" parameterType="java.lang.String">
    DELETE FROM USER WHERE email=#{email,jdbcType=CHAR}
  </delete>
</mapper>